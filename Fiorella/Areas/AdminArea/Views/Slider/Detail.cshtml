@using Fiorello.Areas.AdminArea.ViewModels.SliderVMs
@model SliderListVM

@{
    Layout = "~/Areas/AdminArea/Views/Shared/_AdminLayout.cshtml";
}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <img src="~/img/@Model.ImgUrl" class="card-img-top" alt="Slider Image" style="height: 300px; object-fit: cover;" />
                <div class="card-body">
                    <h4 class="card-title">CreateDate:</h4> 
                    <p class="card-text">@Model.CreateDate?.ToString("dd.MM.yyyy")</p>
                    <a asp-action="index" class="btn btn-outline-dark">Go Back</a>
                </div>
            </div>
        </div>
    </div>
</div>

