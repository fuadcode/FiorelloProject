@using Fiorello.Areas.AdminArea.ViewModels.RoleVMs
@model RoleUpdateVM

<style>
    .form-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        background-color: #f9f9f9;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-check {
        margin-bottom: 10px;
    }

    .btn {
        display: block;
        width: 100%;
    }
</style>

<div class="form-container">
    <h1>@Model.UserName</h1>

    <form method="post">
        <div class="form-group">
            <label for="roles">Select Roles:</label>
            <div id="roles">
                @foreach (var role in Model.Roles)
                {
                    <div class="form-check">
                        <input class="form-check-input"
                               type="checkbox"
                               id="role-@role.Name"
                               name="newUserRoles"
                               value="@role.Name"
                        @(Model.UserRoles.Contains(role.Name) ? "checked" : "") />
                        <label class="form-check-label" for="role-@role.Name">
                            @role.Name
                        </label>
                    </div>
                }
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>
