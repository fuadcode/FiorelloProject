@{
    ViewData["Title"] = "Dashboard";
}

<h2>Dashboard</h2>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Total User Count</h5>
                <p class="card-text">@ViewBag.UserCount</p>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Total Subscription Count</h5>
                <p class="card-text">@ViewBag.SubscriptionCount</p>
            </div>
        </div>
    </div>
</div>

<style>
  /* Custom styles for the dashboard */
.card {
    border: none;
    border-radius: 15px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s, box-shadow 0.2s;
    margin-bottom: 20px;
}

.card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
}

.card-title {
    font-size: 1.5rem;
    font-weight: 700;
    color: #4a4a4a;
}

.card-text {
    font-size: 1.2rem;
    color: #737373;
}

.row {
    margin-top: 20px;
}

.col-md-6 {
    margin-bottom: 20px;
}

.card-body {
    text-align: center;
    padding: 20px;
}





</style>